{
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [{
            "source": "**",
            "destination": "/index.html"
        }],
        "redirects": [{
            "source": "/",
            "destination": "https://www.dylvault.com",
            "type": 301
        }]
    }
}